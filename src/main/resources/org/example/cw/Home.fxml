<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.cw.HomeController">
   <children>
      <Label fx:id="label_welcome" layoutX="371.0" layoutY="10.0" text="Home">
         <font>
            <Font name="System Bold" size="31.0" />
         </font>
      </Label>
      <Button fx:id="button_log_out" layoutX="10.0" layoutY="550.0" mnemonicParsing="false" onAction="#handleLogOutButton" prefHeight="35.0" prefWidth="134.0" style="-fx-background-color: #6285f8;" text="Log out">
         <font>
            <Font size="15.0" />
         </font></Button>
      <ScrollPane fx:id="articleScrollPane" hbarPolicy="NEVER" layoutX="20.0" layoutY="74.0" prefHeight="450.0" prefWidth="760.0" vbarPolicy="ALWAYS">
         <content>
            <VBox fx:id="articleContainer" alignment="CENTER" spacing="10" />
         </content>
      </ScrollPane>
      <Button fx:id="button_see_more" layoutX="355.0" layoutY="532.0" mnemonicParsing="false" onAction="#handleSeeMoreButton" prefHeight="35.0" prefWidth="119.0" style="-fx-background-color: #6285f8;" text="See More">
         <font>
            <Font size="16.0" />
         </font></Button>
      <Button fx:id="button_see_recommendations" layoutX="575.0" layoutY="33.0" mnemonicParsing="false" onAction="#handleSeeRecommendationsButton" prefHeight="35.0" prefWidth="188.0" style="-fx-background-color: #dd6d6d;" text="See recommendations">
         <font>
            <Font size="15.0" />
         </font></Button>
   </children>
</AnchorPane>
