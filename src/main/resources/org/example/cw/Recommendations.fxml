<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.cw.RecommendationsController"
      spacing="10" style="-fx-padding: 20; -fx-background-color: #f9f9f9;">

   <!-- Title -->
   <Text text="Recommended Articles"
         style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #333;" />

   <!-- Article List Container -->
   <VBox fx:id="recommendationsContainer" spacing="15"
         style="-fx-padding: 10; -fx-background-color: #ffffff; -fx-border-color: lightgray; -fx-border-radius: 5;"
         VBox.vgrow="ALWAYS">
   </VBox>

   <!-- Back Button -->
   <HBox alignment="CENTER" spacing="10">
      <Button fx:id="button_back_to_home" text="Back to Home"
              style="-fx-padding: 10; -fx-font-size: 14; -fx-background-color: #0078D7; -fx-text-fill: white;" />
   </HBox>
</VBox>
