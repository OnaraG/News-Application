<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox prefHeight="649.0" prefWidth="782.0" spacing="10" style="-fx-padding: 20; -fx-background-color: #f9f9f9;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.cw.RecommendationsController">

   <!-- Title -->
   <Text style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #333;" text="Recommended Articles">
      <VBox.margin>
         <Insets left="240.0" />
      </VBox.margin></Text>
   <ScrollPane hbarPolicy="NEVER" VBox.vgrow="ALWAYS">
      <content>
      
         <!-- Article List Container -->
         <VBox fx:id="recommendationsContainer" maxWidth="730.0" spacing="15" style="-fx-padding: 10; -fx-background-color: #ffffff; -fx-border-color: lightgray; -fx-border-radius: 5;">
   </VBox>
      </content>
   </ScrollPane>

   <!-- Back Button -->
   <HBox alignment="CENTER" spacing="10">
      <Button fx:id="button_back_to_home" style="-fx-padding: 10; -fx-font-size: 14; -fx-background-color: #0078D7; -fx-text-fill: white;" text="Back to Home" />
   </HBox>
</VBox>
